---
import Layout from '../layouts/Layout.astro';
import { 
  Menu, X, ChevronRight, Wheat, Leaf, MapPin, 
  Sun, Truck, Heart, Mountain, Shield, Mail, 
  Phone, ChevronLeft, Download, Briefcase, ChevronDown, Mouse, ArrowRight, ShieldCheck
} from 'lucide-astro';
---

<Layout title="Nature - Un Gesto d'Amore | Azienda Agricola Romano">
    <!-- NAVBAR -->
    <nav id="navbar" class="fixed w-full z-50 transition-all duration-300 py-4 bg-transparent text-white">
        <div class="max-w-[1440px] mx-auto px-4 md:px-8 flex justify-between items-center">
            
            <!-- Logo Container -->
            <div class="flex items-center gap-6">
                <!-- LOGO NATURE -->
                <img src="/LogoNature.png" alt="NATURE" class="h-12 w-auto object-contain brightness-0 invert" id="nav-logo" />
                <span id="brand-text" style="display:none" class="text-xl font-serif font-bold tracking-wider text-white">
                    NATURE
                </span>
            </div>

            <!-- Desktop Menu -->
            <div id="desktop-menu" class="hidden lg:flex items-center space-x-6 xl:space-x-8 text-white font-medium tracking-wide text-lg">
                <a href="#storia" class="hover:text-accent transition">Chi Siamo</a>
                <a href="#filosofia" class="hover:text-accent transition">Filiera Corta e Made in Italy</a>
                <a href="#prodotti" class="hover:text-accent transition">Prodotti</a>
                <a href="#b2b" class="bg-primary text-white px-6 py-2 rounded-full hover:brightness-110 transition shadow-lg border border-transparent font-serif italic">
                    Area B2B
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="menu-btn" class="lg:hidden text-primary bg-white p-2 rounded-md shadow-lg">
                <Menu />
            </button>
        </div>

        <!-- Mobile Menu Overlay -->
        <div id="mobile-menu" class="hidden absolute top-full left-0 w-full bg-white shadow-xl py-6 flex flex-col items-center space-y-4 animate-fade-in-down border-t border-stone-100">
            <a href="#storia" class="mobile-link text-textMain text-lg font-medium">Chi Siamo</a>
            <a href="#filosofia" class="mobile-link text-textMain text-lg font-medium">Filiera Corta e Made in Italy</a>
            <a href="#prodotti" class="mobile-link text-textMain text-lg font-medium">Prodotti</a>
            <a href="#b2b" class="mobile-link text-primary font-bold text-lg font-serif">Richiedi Kit</a>
        </div>
    </nav>

    <!-- HERO SECTION -->
    <header class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden bg-textMain">
        <!-- Background Image -->
        <div class="absolute inset-0 z-0 scale-105 animate-slow-zoom">
            <img 
                src="https://images.unsplash.com/photo-1500382017468-9049fed747ef?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" 
                alt="Campo di grano Gargano" 
                class="w-full h-full object-cover opacity-60"
            />
        </div>
        
        <div class="relative z-10 text-center px-4 max-w-4xl mx-auto mt-16 animate-fade-in">
            <div class="inline-block mb-6">
                <span class="bg-primary text-white px-5 py-1.5 rounded-full text-xs uppercase tracking-[0.2em] font-bold shadow-lg">
                    Puglia, Italia
                </span>
            </div>
            
            <!-- LOGO NATURE GRANDE (HERO) -->
            <img src="/LogoNature.png" alt="Nature Logo" class="h-40 mx-auto mb-8 drop-shadow-lg brightness-0 invert" id="hero-logo" />
            
            <h1 class="text-5xl md:text-8xl font-serif font-bold text-white mb-6 leading-tight drop-shadow-lg" style="display:none" id="hero-title-text">
                NATURE <br/>
                <span class="text-3xl md:text-5xl font-light italic font-serif">Un gesto d'amore</span>
            </h1>
            
            <p class="text-xl md:text-2xl text-stone-50 mb-12 font-light max-w-2xl mx-auto leading-relaxed drop-shadow-md tracking-wide">
                Dal cuore dell'Alto Tavoliere della Puglia alla tua tavola. Pasta artigianale a filiera corta, 
                perché mangiare bene è il primo passo per vivere meglio.
            </p>
            <div class="flex flex-col sm:flex-row gap-5 justify-center">
                <a href="#prodotti" class="bg-primary text-white px-8 py-4 rounded-full font-serif italic font-bold text-xl hover:brightness-110 transition transform hover:-translate-y-1 shadow-xl flex items-center justify-center gap-3">
                    Scopri la Pasta <ChevronRight size={20} />
                </a>
                <a href="#storia" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-bold text-xl hover:bg-white hover:text-textMain transition flex items-center justify-center tracking-wide">
                    La Nostra Storia
                </a>
            </div>
        </div>
    </header>

    <!-- STORIA E FAMIGLIA -->
    <section id="storia" class="py-24 bg-white">
        <div class="container mx-auto px-6">
            <div class="flex flex-col lg:flex-row items-center gap-16">
                <div class="lg:w-5/12 flex flex-col lg:relative mb-12 lg:mb-0">
                    <!-- Logo (Top with slight overlap on Mobile, Bottom Overlay on Desktop) -->
                    <div class="order-first lg:order-none w-44 h-44 bg-white rounded-full shadow-2xl flex items-center justify-center z-20 border-2 border-stone-100 group/logo overflow-visible cursor-pointer opacity-0 animate-slide-in-bottom fill-mode-forwards relative left-1/2 -mb-12 lg:mb-0 lg:absolute lg:-bottom-20 lg:top-auto">
                        <img 
                            src="/LogoAziendaRomano.png" 
                            alt="Azienda Agricola Romano" 
                            class="w-32 h-auto object-contain transition-transform duration-500 group-hover/logo:scale-110"
                        />
                        <!-- Circular animated rings on hover -->
                        <div class="absolute inset-0 border-4 border-primary/0 rounded-full group-hover/logo:border-primary/20 transition-all duration-700 group-hover/logo:scale-95"></div>

                        <!-- INTERACTIVE NOTES (Desktop Only) -->
                        <div class="hidden lg:block">
                            <!-- Note: Grifi (Only this one per user request) -->
                            <div class="absolute top-1/2 left-full -translate-y-1/2 w-48 ml-6 opacity-0 group-hover/logo:opacity-100 transition-all duration-700 delay-100 -translate-x-10 group-hover/logo:translate-x-0 pointer-events-none">
                                <div class="bg-white/95 backdrop-blur-sm p-4 rounded-sm shadow-xl border-l-4 border-primary text-left">
                                    <p class="text-[10px] uppercase tracking-widest font-bold text-primary mb-1">Lo Stemma</p>
                                    <p class="text-xs text-textMain/70 leading-relaxed italic">I due Grifi: simbolo di perseveranza, sacrificio e continuità familiare.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Image Wrapper -->
                    <div class="relative overflow-hidden rounded-sm shadow-2xl">
                        <img 
                            src="/famigliaGranoFoto.jpeg" 
                            alt="Famiglia Romano nel campo di grano" 
                            class="w-full h-auto object-cover"
                        />
                        <!-- Decorative corner accent -->
                        <div class="absolute top-0 left-0 w-16 h-16 border-t-4 border-l-4 border-primary/30 m-4"></div>
                    </div>
                </div>
                <div class="lg:w-7/12">
                    <div class="inline-flex items-center gap-4 mb-4">
                        <span class="h-px w-10 bg-primary"></span>
                        <h4 class="text-primary font-bold text-xs uppercase tracking-[0.3em]">L'Essenza della Nostra Storia</h4>
                    </div>
                    <h2 class="text-5xl font-serif font-bold text-textMain mb-10 leading-tight">Radici profonde, <span class="text-primary italic">visione moderna</span></h2>
                    
                    <div class="space-y-6 text-textMain/70 text-lg font-light leading-relaxed">
                        <p>
                            Siamo un’azienda agricola familiare, da tre generazioni impegnata nel coltivare la terra con passione, sacrificio e rispetto per la natura. La nostra storia nasce nel dopoguerra, quando la prima generazione, animata da valori autentici come il lavoro, la gratitudine e l’umiltà, ha gettato le basi di quella che oggi è una realtà moderna ma profondamente legata alle sue radici.
                        </p>
                        <p>
                            Essere coltivatori, per noi, non è solo un mestiere: è uno stile di vita tramandato nel tempo, un’eredità che ci ricorda ogni giorno quanto la qualità nasca dal cuore, prima ancora che dalla terra. Coltiviamo e produciamo seguendo i principi della filiera corta e dell’eccellenza artigianale italiana, selezionando solo varietà locali adatte al nostro territorio.
                        </p>
                        <p>
                            Ogni passaggio – dalla semina alla trasformazione – è curato con attenzione e consapevolezza per offrire prodotti genuini, buoni e 100% Made in Italy.
                        </p>
                        <p>
                            La nostra forza è la continuità familiare. La seconda generazione ha consolidato l’esperienza agricola, trasformandola in impresa, mentre la terza la rinnova con innovazione, trasparenza e valorizzazione dei valori che ci rappresentano: <strong class="text-textMain font-bold">onestà, umiltà e rispetto per la terra.</strong>
                        </p>
                        <p>
                            Dalla terra nasce tutto: il nutrimento, il lavoro, la famiglia. Per questo, ogni nostro prodotto racconta una storia fatta di mani, stagioni e sacrifici.
                        </p>
                        <div class="pt-8 border-t border-stone-100 mt-8">
                            <p class="font-serif italic text-2xl text-primary leading-snug">
                                "Un acquisto consapevole sarà sempre un gesto d’amore per la tua famiglia."
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- TRASPARENZA E IDENTITÀ -->
    <section id="filosofia" class="py-32 bg-stone-50 overflow-hidden">
        <div class="container mx-auto px-6">


            <!-- INTEGRATED CONTENT -->
            <div class="grid lg:grid-cols-2 gap-16 items-stretch mb-24">
                <!-- Left Column: Filiera Corta -->
                <div class="bg-white p-12 rounded-sm shadow-xl border-t-4 border-primary h-full">
                    <div class="inline-flex items-center gap-4 mb-8">
                        <span class="h-px w-10 bg-primary"></span>
                        <h4 class="text-primary font-bold text-xs uppercase tracking-[0.3em]">Trasparenza e Identità</h4>
                    </div>
                    <h3 class="text-4xl font-serif font-bold text-textMain mb-6">La Filiera Corta</h3>
                    <p class="text-xl text-secondary font-serif italic mb-8">"Quando il cibo è vicino a te, la qualità è reale."</p>
                    <p class="text-textMain/70 text-lg font-light leading-relaxed mb-8">
                        Riduciamo drasticamente i passaggi tra chi produce e chi consuma, privilegiando la tracciabilità e l’autenticità di ogni chicco.
                    </p>
                    <ul class="space-y-4">
                        <li class="flex items-center gap-4 text-textMain/80">
                            <div class="w-1.5 h-1.5 rounded-full bg-primary shrink-0"></div>
                            <span class="font-light italic text-lg text-textMain">Origine certa dal cuore della Capitanata</span>
                        </li>
                        <li class="flex items-center gap-4 text-textMain/80">
                            <div class="w-1.5 h-1.5 rounded-full bg-primary shrink-0"></div>
                            <span class="font-light italic text-lg text-textMain">Minimo impatto ambientale</span>
                        </li>
                        <li class="flex items-center gap-4 text-textMain/80">
                            <div class="w-1.5 h-1.5 rounded-full bg-primary shrink-0"></div>
                            <span class="font-light italic text-lg text-textMain">Massima freschezza nutrizionale</span>
                        </li>
                    </ul>
                </div>

                <!-- Right Column: Made in Italy -->
                <div class="bg-white p-12 rounded-sm shadow-xl border-t-4 border-primary h-full">
                    <div class="inline-flex items-center gap-4 mb-8">
                        <span class="h-px w-10 bg-primary"></span>
                        <h4 class="text-primary font-bold text-xs uppercase tracking-[0.3em]">Eccellenza Italiana</h4>
                    </div>
                    <h3 class="text-4xl font-serif font-bold text-textMain mb-6">Made in Italy a tavola</h3>
                    <p class="text-xl text-secondary font-serif italic mb-8">"L'amore per il territorio in ogni piatto."</p>
                    <p class="text-textMain/70 text-lg font-light leading-relaxed mb-8">
                        Non è un’etichetta, è una promessa di cultura e territorio che si concretizza in ogni piatto di pasta Nature.
                    </p>
                    <ul class="space-y-4">
                        <li class="flex items-center gap-4 text-textMain/80">
                            <ShieldCheck class="text-primary shrink-0" size={20} />
                            <span class="font-light italic text-lg text-textMain">Fasi 100% in Italia</span>
                        </li>
                        <li class="flex items-center gap-4 text-textMain/80">
                            <ShieldCheck class="text-primary shrink-0" size={20} />
                            <span class="font-light italic text-lg text-textMain">Autenticità garantita</span>
                        </li>
                        <li class="flex items-center gap-4 text-textMain/80">
                            <ShieldCheck class="text-primary shrink-0" size={20} />
                            <span class="font-light italic text-lg text-textMain">Biodiversità tutelata</span>
                        </li>
                    </ul>
                </div>
            </div>

    <!-- IL VIAGGIO DI NATURE -->
    <section class="py-24 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <div class="inline-flex items-center gap-4 mb-4">
                    <span class="h-px w-10 bg-primary"></span>
                    <h4 class="text-primary font-bold text-xs uppercase tracking-[0.3em]">Il Processo</h4>
                </div>
                <h2 class="text-5xl font-serif font-bold text-textMain mb-6">Il viaggio di Nature</h2>
                <p class="text-textMain/50 font-light italic text-xl">"Dal campo alla tua tavola, ogni passo è una scelta d'amore."</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
                <!-- Step 1 -->
                <div class="bg-stone-50 p-8 rounded-sm shadow-sm hover:shadow-md transition-all h-full border-t-4 border-primary/20 hover:border-primary">
                    <div class="text-primary mb-4"><Wheat size={32} /></div>
                    <h4 class="font-serif font-bold text-textMain mb-2 text-xl">Coltivazione</h4>
                    <p class="text-sm text-textMain/60 leading-relaxed font-light">Varietà pregiate nel cuore della Daunia Rurale, rispettando i ritmi della terra.</p>
                </div>
                <!-- Step 2 -->
                <div class="bg-stone-50 p-8 rounded-sm shadow-sm hover:shadow-md transition-all h-full border-t-4 border-primary/20 hover:border-primary">
                    <div class="text-primary mb-4"><Sun size={32} /></div>
                    <h4 class="font-serif font-bold text-textMain mb-2 text-xl">Macinazione</h4>
                    <p class="text-sm text-textMain/60 leading-relaxed font-light">Semola viva dal colore giallo paglierino, pura e tracciabile.</p>
                </div>
                <!-- Step 3 -->
                <div class="bg-stone-50 p-8 rounded-sm shadow-sm hover:shadow-md transition-all h-full border-t-4 border-primary/20 hover:border-primary">
                    <div class="text-primary mb-4"><Heart size={32} /></div>
                    <h4 class="font-serif font-bold text-textMain mb-2 text-xl">Produzione</h4>
                    <p class="text-sm text-textMain/60 leading-relaxed font-light">Trafilatura al bronzo ed essiccazione lenta a basse temperature.</p>
                </div>
                <!-- Step 4 -->
                <div class="bg-stone-50 p-8 rounded-sm shadow-sm hover:shadow-md transition-all h-full border-t-4 border-primary/20 hover:border-primary">
                    <div class="text-primary mb-4"><Briefcase size={32} /></div>
                    <h4 class="font-serif font-bold text-textMain mb-2 text-xl">Imballaggio</h4>
                    <p class="text-sm text-textMain/60 leading-relaxed font-light">Confezionamento curato che racconta energia e trasparenza.</p>
                </div>
                <!-- Step 5 -->
                <div class="bg-stone-50 p-8 rounded-sm shadow-sm hover:shadow-md transition-all h-full border-t-4 border-primary/20 hover:border-primary">
                    <div class="text-primary mb-4"><MapPin size={32} /></div>
                    <h4 class="font-serif font-bold text-textMain mb-2 text-xl">In tavola</h4>
                    <p class="text-sm text-textMain/60 leading-relaxed font-light">Un pezzo autentico di Puglia, per chi sceglie la vera qualità.</p>
                </div>
            </div>

            <div class="mt-20 p-10 bg-stone-50 shadow-xl rounded-sm text-center border-b-8 border-secondary max-w-4xl mx-auto">
                <p class="text-2xl font-serif italic text-textMain leading-relaxed">
                    "Nature è la sintesi di una filosofia profonda: rispetto, amore per la terra e per chi la vive."
                </p>
            </div>
        </div>
    </section>

    <!-- PRODOTTI -->
    <section id="prodotti" class="py-24 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-20">
                <span class="text-primary font-bold text-sm uppercase tracking-[0.2em] mb-4 block">La Nostra Collezione</span>
                <h2 class="text-5xl font-serif font-bold text-textMain mb-6">Pasta Artigianale</h2>
                <p class="text-textMain/60 max-w-2xl mx-auto text-lg font-light leading-relaxed">
                    Grano duro 100% italiano, trafilatura al bronzo ed essiccazione lenta. 
                    Ogni formato racconta una storia di gusto.
                </p>
            </div>

            <div id="product-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
                <!-- FUSILLONI -->
                <div class="group cursor-pointer">
                    <div class="relative overflow-hidden mb-6 rounded-sm bg-stone-50 aspect-[4/3] flex items-center justify-center">
                        <img src="/Fusilloni.jpeg" alt="Fusilloni" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out" />
                        <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-textMain shadow-sm">
                            13 min
                        </div>
                    </div>
                    <h3 class="text-3xl font-serif font-bold text-textMain mb-2 group-hover:text-primary transition">Fusilloni</h3>
                    <p class="text-secondary font-serif italic mb-4 text-lg">"Profumi intensi dell'estate."</p>
                    <div class="border-t border-stone-100 pt-4 mt-4">
                        <p class="text-xs font-bold text-primary uppercase tracking-widest mb-1">Abbinamento</p>
                        <p class="text-textMain font-light">Crema di melanzane arrostite e pomodorini secchi sott’olio.</p>
                    </div>
                </div>

                <!-- CALAMARATA -->
                <div class="group cursor-pointer">
                    <div class="relative overflow-hidden mb-6 rounded-sm bg-stone-50 aspect-[4/3] flex items-center justify-center">
                        <img src="/Calamarata.jpeg" alt="Calamarata" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out" />
                        <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-textMain shadow-sm">
                            12 min
                        </div>
                    </div>
                    <h3 class="text-3xl font-serif font-bold text-textMain mb-2 group-hover:text-primary transition">Calamarata</h3>
                    <p class="text-secondary font-serif italic mb-4 text-lg">"Gusto raffinato e naturale."</p>
                    <div class="border-t border-stone-100 pt-4 mt-4">
                        <p class="text-xs font-bold text-primary uppercase tracking-widest mb-1">Abbinamento</p>
                        <p class="text-textMain font-light">Crema di carciofi artigianale con scorza di limone.</p>
                    </div>
                </div>

                <!-- ESAGONI -->
                <div class="group cursor-pointer">
                    <div class="relative overflow-hidden mb-6 rounded-sm bg-stone-50 aspect-[4/3] flex items-center justify-center">
                        <img src="/Esagoni.jpeg" alt="Esagoni" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out" />
                        <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-textMain shadow-sm">
                            12 min
                        </div>
                    </div>
                    <h3 class="text-3xl font-serif font-bold text-textMain mb-2 group-hover:text-primary transition">Esagoni</h3>
                    <p class="text-secondary font-serif italic mb-4 text-lg">"Semplicità mediterranea."</p>
                    <div class="border-t border-stone-100 pt-4 mt-4">
                        <p class="text-xs font-bold text-primary uppercase tracking-widest mb-1">Abbinamento</p>
                        <p class="text-textMain font-light">Olio EVO aromatizzato al peperoncino e prezzemolo fresco.</p>
                    </div>
                </div>

                <!-- PACCHERI -->
                <div class="group cursor-pointer">
                    <div class="relative overflow-hidden mb-6 rounded-sm bg-stone-50 aspect-[4/3] flex items-center justify-center">
                        <img src="/Paccheri.jpeg" alt="Paccheri" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out" />
                        <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-textMain shadow-sm">
                            13 min
                        </div>
                    </div>
                    <h3 class="text-3xl font-serif font-bold text-textMain mb-2 group-hover:text-primary transition">Paccheri</h3>
                    <p class="text-secondary font-serif italic mb-4 text-lg">"Esplosione di colore e gusto."</p>
                    <div class="border-t border-stone-100 pt-4 mt-4">
                        <p class="text-xs font-bold text-primary uppercase tracking-widest mb-1">Abbinamento</p>
                        <p class="text-textMain font-light">Crema di datterino giallo con basilico fresco e olio EVO.</p>
                    </div>
                </div>

                <!-- CASERECCE -->
                <div class="group cursor-pointer">
                    <div class="relative overflow-hidden mb-6 rounded-sm bg-stone-50 aspect-[4/3] flex items-center justify-center">
                        <img src="/Caserecce.jpeg" alt="Caserecce" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out" />
                        <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-textMain shadow-sm">
                            10 min
                        </div>
                    </div>
                    <h3 class="text-3xl font-serif font-bold text-textMain mb-2 group-hover:text-primary transition">Caserecce</h3>
                    <p class="text-secondary font-serif italic mb-4 text-lg">"Purezza e dolcezza."</p>
                    <div class="border-t border-stone-100 pt-4 mt-4">
                        <p class="text-xs font-bold text-primary uppercase tracking-widest mb-1">Abbinamento</p>
                        <p class="text-textMain font-light">Passata artigianale di pomodoro datterino e basilico fresco.</p>
                    </div>
                </div>

                <!-- MACCHERONCINI RIGATI -->
                <div class="group cursor-pointer">
                    <div class="relative overflow-hidden mb-6 rounded-sm bg-stone-50 aspect-[4/3] flex items-center justify-center">
                        <img src="/Maccheroncini.jpeg" alt="Maccheroncini Rigati" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out" />
                        <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-textMain shadow-sm">
                            11 min
                        </div>
                    </div>
                    <h3 class="text-3xl font-serif font-bold text-textMain mb-2 group-hover:text-primary transition">Maccheroncini Rigati</h3>
                    <p class="text-secondary font-serif italic mb-4 text-lg">"Genuina e mediterranea."</p>
                    <div class="border-t border-stone-100 pt-4 mt-4">
                        <p class="text-xs font-bold text-primary uppercase tracking-widest mb-1">Abbinamento</p>
                        <p class="text-textMain font-light">Sugo rustico con pomodoro, peperoni, olive nere e capperi.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- B2B & CONTACT FORM -->
    <section id="b2b" class="py-24 bg-gradient-to-br from-white to-stone-50">
